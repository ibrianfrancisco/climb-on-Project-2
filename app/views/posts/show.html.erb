<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="panel panel-default">
    <div class="panel panel-heading">
      <div class="panel-title pull-left">
        <%= @post.title %>
      </div>
      <div class="panel-title pull-right">
        Posted <%= time_ago_in_words(@post.created_at) %> ago.
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      <%= simple_format(@post.description)%>
        <%= image_tag @post.image, class: "post-img" if @post.image? %>
    </div>
  </div>
  <% if current_user %>
    <%= link_to "Edit post /", post_path + '/edit' if current_user == @post.user %>
    <%= link_to "Delete post /", post_path, method: :delete, data: { confirm: "Are you sure you want to delete?" } if current_user == @post.user %>
  <% else %>
  <% end %>
  <%= link_to "Go Back", user_path(@post.user) %>
</div>

<div class="container">
  <% @post.comments.each do |comment| %>
    <div class="panel-heading">
        <span><%= link_to gravatar_for(comment.user), comment.user %></span>
        <span class="fixname postname"><%= link_to comment.user.name, comment.user %></span>
        <span>Posted <%= time_ago_in_words(@post.created_at) %> ago.</span>
        <span class="fixcomment"><%= comment.body %></span>
      <% if current_user %>
        <div class="container">
          <%= link_to "Delete /", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete?" } if current_user.id == comment.user_id %>
          <%= link_to "Edit", comment_path(comment) + '/edit' if current_user == comment.user %>
        </div>
      <% else %>
      <% end %>
    </div>
  <% end %>
  <div><%= link_to "Log in to say something!", root_path if !current_user %></div>
  <% if current_user %>
      <%= form_for [@post, @comment] do |f| %>
        <div class="panel panel-info">
          <%= f.text_area :body, size:"2x3", :class => "form-control", :required => true, placeholder: "Say something..." %>
        </div>
          <%= f.submit "Submit", :class => "btn btn-primary" %>
      <% end %>
  <% else %>
  <% end %>
</div>
