<% if current_user %>


  <div class="container">
    <p id="notice"><%= notice %></p>
    <h3>
      <%= @post.title %>
    </h3>
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <div class="panel-title pull-left">
          <%= @post.title %>
        </div>
        <div class="panel-title pull-right">
          Posted <%= time_ago_in_words(@post.created_at) %> ago.
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="panel-body">
        <%= simple_format(@post.description)%>
          <%= image_tag @post.image, class: "post-img" if @post.image? %>
      </div>
    </div>

  <%= link_to "Edit post /", post_path + '/edit' if current_user == @post.user %>
  <%= link_to "Delete post /", post_path, method: :delete, data: { confirm: "Are you sure you want to delete?" } if current_user == @post.user %>
  <%= link_to "Go Back", user_path(@post.user) %>
  </div>

  <div class="container">
    <% @post.comments.each do |comment| %>
      <div class="panel panel-default">
        <div class="panel panel-heading">
          <div class="panel-title">
            <%= gravatar_for comment.user %>
            <%= comment.user.name %>
          </div>
        </div>
        <div class="panel-body">
          <%= comment.body %>
        </div>
        <%= link_to "Delete comment", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete?" } if current_user.id == comment.user_id %>
        <%= link_to "Edit post /", comment_path(comment) + '/edit' if current_user == comment.user %>
      </div>
    <% end %>
    <div class="container">
      <%= form_for [@post, @comment] do |f| %>
        <div class="panel panel-info">
          <%= f.text_area :body, size:"2x2", :class => "form-control", :required => true, placeholder: "Say something..." %>
        </div>
        <div class="actions">
          <%= f.submit "Comment", :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>


<% else %>


  <div class="container">
    <p id="notice"><%= notice %></p>
    <h3>Created at: <%= @post.created_at.localtime.strftime("%A, %b %d, %l:%M %p") %></h3>
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <div class="panel-title pull-left">
          <%= @post.title %>
        </div>
        <div class="panel-title pull-right">
          <%= @post.updated_at.localtime.strftime("%b %e, %l:%M %p") %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="panel-body">
        <%= simple_format(@post.description)%>
          <%= image_tag @post.image, class: "post-img" if @post.image? %>
      </div>
    </div>
  <%= link_to "Go Back", user_path(@post.user) %>
  </div>

  <div class="container">
    <% @post.comments.each do |comment| %>
      <div class="panel panel-default">
        <div class="panel panel-heading">
          <div class="panel-title">
            <%= gravatar_for comment.user %>
            <%= comment.user.name %>
          </div>
        </div>
        <div class="panel-body">
          <%= comment.body %>
        </div>
      </div>
    <% end %>
    <a href="/">Wanna comment something?</a>
  </div>


<% end %>
