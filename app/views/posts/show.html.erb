<% if current_user %>

<div class="container">
  <p id="notice"><%= notice %></p>
  <h3> Created at: <%= @post.created_at.localtime.strftime("%A, %b %d, %l:%M %p") %></h3>
  <div class="panel panel-default">
    <div class="panel panel-heading">
      <div class="panel-title pull-left">
        <%= @post.title %>
      </div>
      <div class="panel-title pull-right">
        <%= @post.updated_at.localtime.strftime("%b %e, %l:%M %p") %>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      <%= simple_format(@post.description)%>
      <%= image_tag @post.image %>
    </div>
  </div>

  <%= link_to "Edit post", post_path + '/edit' %>
  <%= link_to "Delete post", post_path, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
  <%= link_to "Go Back", user_path(@post.user) %>
</div>





<div class="container">
  <div class="panel panel-default">
  <% @comments.each do |comment| %>
      <div class="panel panel-body"><%= comment.body %></div>
      <% end %>
      <%= render :partial => '/comments/form', :comment => @post.comments.new %>
    <%#= link_to "Leave a comment", new_comment_path %>







    <div class="container">
     <%= form_for(@comment) do |f| %>
       <% if @comment.errors.any? %>
         <div id="error_explanation">
           <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

           <ul>
           <% @comment.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
           </ul>
         </div>
       <% end %>








       <div class="panel panel-info">
         <div class="panel-heading">
           <strong>CONTENT</strong>
         </div>
           <%= f.text_area :body, size:"5x5", :class => "form-control", :required => true %>
           <%= f.hidden_field :post_id, value: @comment.post.id %>
           <%= f.hidden_field :user_id, value: current_user.id %>
         </div>

       <div class="actions">
         <%= f.submit %>
       </div>
         <% end %>
       </div>

    </div>
  </div>






<% else %>





