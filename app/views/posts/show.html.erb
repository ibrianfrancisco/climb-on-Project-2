<% if current_user %>

  <div class="container">
    <p id="notice"><%= notice %></p>
    <h3>Created at: <%= @post.created_at.localtime.strftime("%A, %b %d, %l:%M %p") %></h3>
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <div class="panel-title pull-left">
          <%= @post.title %>
        </div>
        <div class="panel-title pull-right">
          <%= @post.updated_at.localtime.strftime("%b %e, %l:%M %p") %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="panel-body">
        <%= simple_format(@post.description)%>
          <%= image_tag @post.image, class: "profile-img" if @post.image? %>
      </div>
    </div>

  <%= link_to "Edit post", post_path + '/edit' if current_user == @post.user %> /
  <%= link_to "Delete post", post_path, method: :delete, data: { confirm: "Are you sure you want to delete?" } if current_user == @post.user %> /
  <%= link_to "Go Back", user_path(@post.user) %>
  </div>





  <div class="container panel panel-body">
    <% @comments.each do |comment| %>
        <div class="panel panel-body">
          <%= image_tag user_image, class: "gravatar" %>
          <%= comment.user_name%>
          <%= comment.body %>
        </div>
        <% end %>
        <%#= render :partial => '/comments/form', :comment => @post.comments.new %>
      <%#= link_to "Leave a comment", new_comment_path %>

      <div class="container">
       <%= form_for(@comment) do |f| %>
         <div class="panel panel-info">

             <%= f.text_area :body, size:"2x2", :class => "form-control", :required => true, placeholder: "Say something..." %>
             <%= f.hidden_field :post_id, value: @comment.post.id %>
             <%= f.hidden_field :user_id, value: current_user.id %>
             <%= f.hidden_field :user_image, value: current_user.image_file_name %>
             <%= f.hidden_field :user_name, value: current_user.name %>
           </div>

         <div class="actions">
         <%= f.submit "Comment", :class => "btn btn-primary" %>
         </div>
           <% end %>
         </div>

    </div>






<% else %>


<div class="container">
  <p id="notice"><%= notice %></p>
  <h3> Created at: <%= @post.created_at.localtime.strftime("%A, %b %d, %l:%M %p") %></h3>
  <div class="panel panel-default">
    <div class="panel panel-heading">
      <div class="panel-title pull-left">
        <%= @post.title %>
      </div>
      <div class="panel-title pull-right">
        <%= @post.updated_at.localtime.strftime("%b %e, %l:%M %p") %>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      <%= simple_format(@post.description)%>
        <%= image_tag @post.image if @post.image? %>
    </div>
  </div>

  <%= link_to "Go Back", user_path(@post.user) %>
</div>

<div class="container">
  <div class="panel panel-default">
  <% @comments.each do |comment| %>
      <div class="panel panel-body"><%= comment.body %></div>
      <% end %>
      <%#= render :partial => '/comments/form', :comment => @post.comments.new %>
    <%#= link_to "Leave a comment", new_comment_path %>
    </div>
  </div>






<% end %>
