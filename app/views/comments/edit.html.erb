<div class="container">
  <%= link_to 'Back', post_path(@comment.post), :class => "btn btn-danger btn-xs" %>

  <h1 class="title">Edit Comment</h1>
  <div class="container">
    <%= form_for @comment do |f| %>
      <div>
        <%= f.text_field :body, :required => true, placeholder: "Title", :class =>"form-control" %>
      </div>
      <br>
      <div>
        <%= f.submit "Submit", :class => "btn btn-primary" %>
      </div>
    </div>
    <% end %>
</div>
