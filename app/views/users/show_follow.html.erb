<%# provide(:title, @title) %>
  <aside class="span4">
    <section>
      <% if @user.image? %>
        <%= image_tag @user.image, :class => "profile-img" %>
      <% else %>
      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "View my profile", @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <%# if @users.any? %>
        <div class="user_avatars">
          <%# @users.each do |user| %>
            <%= gravatar_for @user %>
          <%# end %>
        </div>
      <%# end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <%# if @users.any? %>
      <ul class="users">
        <%#= render @users %>
      </ul>
      <%#= will_paginate %>
    <%# end %>
  </div>
