<% if current_user %>
  <div class="container">
    <p id="notice"><%= notice %></p>
    </div>
  <div class="container">
    <h1 class="text-center">Dashboard</h1>
  </div>
  <div class="container col-md-8">
    <h3>User's Feed</h3>
    <%= render 'shared/feed' %>
  </div>
  <div class="container col-md-4">
          <section>
            <%= render 'shared/user_info' %>
          </section>
          <section>
            <%= render 'shared/stats' %>
          </section>
          <section>
            <%= render 'shared/post_form' %>
          </section>
  </div>
<% else %>
  <div class="page">
    <div class="container text-center">
      <span id="alert"><%= alert %></span>
      <h1 class="maintitle">Climb On</h1>
      <h3 class="phrase-title">Re-live your adventures</h3>
      <div class="login form-group">
      <%= form_tag sessions_path do %>
        <div class="field">
          <%= text_field_tag :email, params[:email], placeholder: "Email" %>
        </div>
        <div class="field">
          <%= password_field_tag :password, "", placeholder: "Password" %>
        </div>
        <span class="actions"><%= submit_tag "", :style => "display: none;" %></span>
      <% end %>
      <footer class="text-center">
        &copy; 2017 <span class="name">ibrianfrancisco</span>
      </footer>
      </div>
    </div>
  </div>
<% end %>
