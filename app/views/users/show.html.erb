<% if current_user %>
  <div class="container text-center help">
    <h1>My Posts</h1>
    <% @posts.each do |post| %>
      <div class="container">
        <%= post.title %>
        <%= post.description %>
        <%= post.keyword %>
        <%= link_to 'Edit post', post_path(post) + '/edit' if current_user.id == @user.id %>
        <%= link_to 'Show more', post_path(post) if current_user.id == @user.id %>
      </div>
      <% end %>
      <%= link_to 'Create post', new_post_path if current_user.id == @user.id %>


  </div>
<% else %>

<div class="container text-center help">
  <h1>My Posts</h1>
  <% @posts.each do |post| %>
    <div class="container">
      <%= post.title %>
      <%= post.description %>
      <%= post.keyword %>
    </div>
    <% end %>


</div>

<% end %>
