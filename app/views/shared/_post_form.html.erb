<div>
  <%= form_for(@post) do |f| %>
    <%= f.text_field :title, :required => true, :maxlength => 90, :class => "form-control", placeholder: "Title" %>
    <br>
    <%= f.text_area :description, :required => true, size: "5x5", :class => "text-area form-control", placeholder: "Compose new post..." %>
    <%= f.file_field :image %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
</div>
<% end %>
